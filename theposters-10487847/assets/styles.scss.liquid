}

.mission-section {
    background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/mission-bg.png) center repeat-x;
    height: 600px;
    padding-top: 165px;
    p {
        width: 455px;
        margin: auto;
        border: 1px solid #999;
        border-width: 1px 0;
        padding: 30px 0;
        text-align: center;
        text-transform: uppercase;
        font-size: 28px;
        color: #999;
        strong {
            display: block;
            color: #fff;
            line-height: 60px;
        }
        button {
            display: block;
            text-align: center;
            width: 250px;
            margin: 28px auto 0;
            font-size: 12px;
            background-color: #666;
            color: #fff;
            border: none;
            text-transform: uppercase;
            padding: 7px;
        }
    }
}

