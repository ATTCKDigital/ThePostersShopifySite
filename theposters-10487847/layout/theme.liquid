<body style="background-image: url({{ 'bgtexture.jpg' | asset_url }})">
  <div id="main-wrapper">
    <header id="main-header">
      <div class="container">
        <div class="row">
          <div class="col-sm-9">
            <nav>
              <ul>
                <li id="logo"><a href="/" style="background-image: url({{ 'logo.png' | asset_url }})">{{ shop.name }}</a></li>
                {% for link in linklists.main-menu.links %}
                {% assign current = false %}
                {% if template == 'index' and link.url == '/' %}
                  {% assign current = true %}
                {% else %}{% if collection.url == link.url %}
                  {% assign current = true %}
                {% else %}{% if page.url == link.url %}
                  {% assign current = true %}
                {% else %}{% if page_title == link.title %}
                  {% assign current = true %}
                {% else %}{% if template == 'list-collections' and link.url == '/collections' %}
                  {% assign current = true %}
                {% else %}{% if page_title == 'Products' and link.url == '/collections/all' %}
                  {% assign current = true %}
                {% endif %}{% endif %}{% endif %}{% endif %}{% endif %}{% endif %}
                
                <li><a{% if current %} class="active"{% endif %} href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </nav>
          </div>
          <div class="col-sm-3">
            <div id="cart-info">
              <!-- <a href="/account/login" class="login">Sign In / Register</a> -->
              <span>My Bag</span>
              <a href="/cart" class="toggle-cart" style="background-image: url({{ 'icon-bag.png' | asset_url }})">{{ cart.item_count }}</a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div id="main-content">
      {{ content_for_layout }}
    </div>

    <footer id="main-footer">
      <div class="container">
        <div class="row">
          <div class="col-sm-5 col-sm-offset-1">
            <div class="mailchimp-subscribe">
              <div id="mc_embed_signup">
                <form action="//attckdigital.us9.list-manage.com/subscribe/post?u=fba80489939b53759b52c03f9&amp;id=66c7520250" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                  <div id="mc_embed_signup_scroll">
                    <div class="mc-field-group">
                      <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Enter your email to subscribe to our monthly newsletter">
                    </div>
                    <div id="mce-responses" class="clear">
                      <div class="response" id="mce-error-response" style="display:none"></div>
                      <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div style="position: absolute; left: -5000px;"><input type="text" name="b_fba80489939b53759b52c03f9_66c7520250" tabindex="-1" value=""></div>
                    <button type="submit" name="subscribe" id="mc-embedded-subscribe" class="button" class="sprite arrow-white-right ir"></button>
                  </div>
                </form>
              </div>



            </div>
          </div>
          <div class="col-sm-5">
            <div class="social-follow-us">

              <h2>Follow us</h2>
              
              <a href="https://www.facebook.com/ThePosters.co" class="social-icon" target="_blank">
                <img src="{{ 'facebook_rollover.jpg' | asset_url }}" alt="FaceBook" class="hover hover-on" />
                <img src="{{ 'facebook.jpg' | asset_url }}" alt="FaceBook" class="hover hover-off" />
              </a>
              <a href="https://twitter.com/ThePosters" class="social-icon" target="_blank">
                <img src="{{ 'twitter_rollover.jpg' | asset_url }}" alt="Twitter" class="hover hover-on" />
                <img src="{{ 'twitter.jpg' | asset_url }}" alt="Twitter" class="hover hover-off" />
              </a>
              <a href="http://instagram.com/theposters.co" class="social-icon" target="_blank">
                <img src="{{ 'instagram_overlay.jpg' | asset_url }}" alt="Instagram" class="hover hover-on" />
                <img src="{{ 'instagram.jpg' | asset_url }}" alt="Instagram" class="hover hover-off" />
              </a>
              <!-- <a href="http://thepostersco.tumblr.com" class="social-icon" target="_blank">
                <img src="{{ 'tumblr_rollover.jpg' | asset_url }}" alt="Tumblr" class="hover hover-on" />
                <img src="{{ 'tumblr.jpg' | asset_url }}" alt="Tumblr" class="hover hover-off" />
              </a> -->

              
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <nav>
              <ul>
                <li><span>&copy; 2014 The Posters</span></li>
                <li><a href="/blogs/press">Press Coverage</a></li>
                <li><a href="/pages/privacy-policy">Privacy Policy</a></li>
                <li><a href="/pages/terms-of-use">Terms of Use</a></li>
                <li><a href="/pages/contact-us">Contact Us</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </footer>
  </div>
  <div id="cart-flyout">
    <a href="/collections/all" class="cart-top-btn" id="keep-shopping">Keep Shopping</a>
    <a href="/checkout" class="cart-top-btn" id="checkout">Checkout</a>

    <div class="subtotal">
      <h2>Subtotal <div class="subtotal-price">{{cart.total_price | money}}</div><small>(Tax Not Included)</small></h2>

      <div class="gift-card">
      </div>

    </div>
    {% if cart.item_count == 0 %}
    <div class="number-of-items">
        {{ cart.item_count }} {{ cart.item_count | pluralize: 'Item', 'Items' }}
      </div>
    <div class="cart-items">
      <h2 class="empty-cart">Your cart is empty.</h2>
    </div>
    {% else%}
      <div class="number-of-items">
        {{ cart.item_count }} {{ cart.item_count | pluralize: 'Item', 'Items' }}
      </div>
      <div class="cart-items">
        {% for item in cart.items %}
        <div class="cart-item">
          <div class="image">
            <img src="{{ item | img_url: 'small' }}"  alt="{{ item.product.title }}" />
          </div>
          <div class="info">
            <a href="/cart/change?line={{ forloop.index }}&quantity=0" data-lid="{{ forloop.index + 1 }}" class="remove-item"><div class="remove-cart-item-icon" style="background-image: url({{ 'closeicon.png' | asset_url }})"></div></a>
            <h3>{{ item.product.title }}</h3>
            
            
            <div class="qty">
              QTY <input type="text" size="2" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" onfocus="this.select();" class="tc item-quantity" /> <a href="#" class="update-cart" data-lid="{{ forloop.index + 1 }}">Update</a>
            </div>
            <div class="price">
              {{ item.line_price | money }}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>

      <div class="gift-note">
        <p>Are you sending this as a gift?<br />Add a message to your order:</p>
        <textarea name="attributes[note]" placeholder="Your message...">{{ cart.attributes.note }}</textarea>
      </div>
    {% endif %}
  </div>
</body>
