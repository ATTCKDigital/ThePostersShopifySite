{% capture collection_handle %}
  {{ product-loop | handleize }}
{% endcapture %}
{% capture url %}
  {% if collection_handle != "" %}
    /collections/{{ product-loop }}{{ product.url }}
  {% else %}
    {{ product.url }}
  {% endif %}
{% endcapture %}

<div class="product" data-expdate="{{product.metafields.visibility.expirationdate}}">
  <div class="poster-clips" style="background-image: url({{'posterclips.png' | asset_url}})"></div>
  <div class="image">
    <a href="{{ url }}">
      <img src="{{ product.featured_image | product_img_url: 'large' }}" alt="{{ product.title | escape  }}" />
    </a>
  </div>
  <div class="details">
    <a href="{{ url }}"><small>{{ product.vendor }}</small><br />{{ product.title }}</a>
    {% if product.metafields.visibility.expirationdate %}
      <div class="availability">Available for <span class="days-remaining">--</span> more days</div>
    {% endif %}
  </div>
</div>