             url({{ 'FranklinGothic-Cd-webfont.woff2' | asset_url }}) format('woff2'),
             url({{ 'FranklinGothic-Cd-webfont.woff' | asset_url }}) format('woff'),
             url({{ 'FranklinGothic-Cd-webfont.ttf' | asset_url }}) format('truetype'),
