    height: 780px;
    @include container();

    .media-contents{
        ul {
            padding-top: 150px;
            li {
                float: left;
                width: 216px;
                margin-right: 30px;
                &.gap {
                    margin-left: 738px;
                }
                &.right-most {
                    margin-right: 0px;
                }
                span {
                    width: 216px;
                    height: 216px;
                    border: 10px solid #fff;
                    display: inline-block;
                    background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/media-logos.png);
                    &.wall-st {
                        background-position: 10px  0;
                    }
                    &.ny-times {
                        background-position: 10px  -1177px;
                    }
                    &.art-forum {
                        background-position: 10px  -197px;
                    }
                    &.vmagazine {
                        background-position: 10px  -391px;
                    }
                    &.art-in-america {
                        background-position: 10px  -585px;
                    }
                    &.bazaar {
                        background-position: 10px  -785px;
                    }
                    &.dazed {
                        background-position: 10px  -980px;
                    }
                }
                blockquote {
                    font-size: 90%;
                    color: #999;
                    font-style: italic;
                    border-left: none;
                    padding: 0;
                    text-align: center;
                    margin: 10px 0 20px 0;
                }
            }
        }
    }   
}

.footer {
    background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/footer-tear.png) #fff repeat-x;
    footer {
        @include container();
        padding: 80px 185px 60px 185px;

        .newsletter-bar {
            float: left;
            input[type=email] {
                background: #efefef;
                padding: 14px 12px 13px;
                width: 371px;
                font-size: 90%;
                color: #999;
                border: none;
            }
            input[type=submit] {
                text-indent: -9999px;
                width: 45px;
                height: 45px;
                background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/newsletter-go-btn.png) 0 0 no-repeat;
                margin-top: -1px;
            }
        }
        .social-links {
            float: left;
            margin-left: 120px;
            h4 {
                float: left;
                text-transform: uppercase;
                color: #999;
                font-size: 80%;
                position: relative;
                top: 7px;
            }
            a {
                text-indent: -9999px;
                width: 45px;
                height: 45px;
                float: left;
                margin-left: 9px;
                background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/social-icons.png) 0 0 no-repeat;
                &.twitter {
                    background-position: -54px 0;
                }
                &.instagram {
                    background-position: -108px 0;
                }
                &.tumblr {
                    background-position: -162px 0;
                }
            }
        }
        .footer-links {
            clear: both;
            margin-top: 100px;
            li {
                float: left;
                margin-left: 40px;
                color: #999;
                font-size: 85%;
                text-transform: uppercase;
                &:first-child {
                    margin-left: 0;
                }
            }
        }
    }    
}









/* Product page styles start */

#product {
    .product-details{
        width: 1000px;
        .images-pane {
            float: left;
            width: 630px;
        }
        .description-pane {
            float: left;
            width: 370px;
        }
        .title-bar {
            border: 1px solid #afaeaf;
            border-width: 1px 0;
            padding: 20px 0;
        }
        .quantity-section {
            width: 50%;
            float: left;

            #quantity {
                width: 30px;
            }
        
            input[type=number]::-webkit-inner-spin-button, 
            input[type=number]::-webkit-outer-spin-button { 
              -webkit-appearance: none; 
              margin: 0; 
            }
        }

        .purchase-section {
            width: 50%;
            float: right;
            text-align: right;

            h2.price {
                display: inline-block;
                font-size: 1em;
            }

            .addtocart {
                background-color: #ff0000;
                color: #fff;
                text-transform: uppercase;
            }
        }
    }
    
}

/* Product page styles end */


