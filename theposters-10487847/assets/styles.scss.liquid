/* CSS Resets */
ul {
    list-style-type: none;
}
ul, li {
    margin: 0;
    padding: 0;
}
a {
    text-decoration: none;
    color: #999;
    &:hover {
        color: #000;
        text-decoration: none;
    }
}
.btn {
    border-radius: 0;
    border: none;
}


html, body { 
    margin: 0; 
    padding: 0; 
    border: 0; 
    background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/bg-texture.jpg); 
}

@mixin container() {
  max-width: 1240px;
  margin: auto;
  padding: 0 20px;
}

.main-container {
    padding: 0;
}


.header {
    background-color: #fff;
    header {
        @include container();
        padding-top: 5px;
        padding-bottom: 5px;
        .logo { 
            text-indent: -9999px;
            background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/logo.png) no-repeat;
            display: inline-block;
            width: 83px;
            height: 107px;
            margin: 0;
        }
        nav {
            display: inline-block;
            vertical-align: bottom;
            margin-left: 8px;
            ul {
                li {
                   float: left;
                   margin: 4px 16px;
                   a {
                     text-transform: uppercase;
                     text-decoration: none;
                     color: #000;
                     &:hover {
                        color: #999;
                     }
                   }
                }
            }
        }
        .toolbar {
            float: right;
            li {
                float: left;
                &.sign-in-link {
                    margin-right: 30px;
                    margin-top: 83px;
                    font-style: italic;
                    font-size: 95%;
                }
                &.toolbar-cart{
                    margin-top: 70px;
                    .cart {
                        display: inline-block;
                        width: 29px;
                        height: 35px;
                        background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/icon-bag.png) no-repeat;
                        #cart-count {
                            display: inline-block;
                            width: 30px;
                            text-align: center;
                            line-height: 45px;
                        }
                    }
                }
                
            }
        }
    }
}
.header-shadow {
    height: 27px;
    background: url(//cdn.shopify.com/s/files/1/0639/4977/t/1/assets/paper-shadow.png) repeat-x;
    margin-bottom: 35px;
}



.preview-section {
    @include container();
    margin-bottom: 60px;
}

.preview-image-container {
  overflow: hidden;
  position: relative;
  width: 500px;
  margin: auto;
  border: 19px solid #fff;

  -webkit-transform: translateZ(0);
  
  &:hover {
    cursor: pointer;
    
    hr.bottom {
      bottom: 35%;
    }
    
    hr.top {
      top: 31%;
    }
    
    .button {
      &.action {
        bottom: 40%;
        opacity: 1;
        
        &:hover {
          background: #d9000d;
        }
      }
    }
    
    .copy {
      opacity: 1;
      
      &.availability {
        top: 46.5%;
      }
      
      &.date {
        left: 10%;
      }
      
      &.title {
        left: 10%;
      }
    }
    
    .preview-modal {
      opacity: 1;
    }
  }
  
  hr {
    background: white;
    border: 0;
    height: 1px;
    margin: 0;
    padding: 0;
    position: absolute;
    left: 10%;
    width: 80%;
    z-index: 1;
    
    &.bottom {
      bottom: -10%;
    }
    
    &.top {
      top: -10%;
    }
    
    -webkit-transition: all .5s;
  }
  
  img {
    display: inline-block;
    margin: 0;
    padding: 0;
    width: 100%;
  }
  
  .action.button {
    background: #fc0d1b;
    bottom: 30%;
    color: white;
    display: block;
    font-family: arial;
    text-decoration: none;
    text-align: center;
    text-transform: uppercase;
    left: 50%;
    margin-left: -75px;
    opacity: 0;
    padding: 10px 10px;
    position: absolute;
    width: 150px;
    z-index: 2;
    
    -webkit-transition: all .2s;
  }
  
  .copy {
    color: white;
    font-family: arial;
    text-transform: uppercase;
    opacity: 0;
    position: absolute;
    text-align: center;
    width: 80%;
    z-index: 2;
    
    &.availability {
      font-size: .7em;
      left: 10%;
      top: 50%;
    }
    
    &.date {
      left: -100%;
      top: 37%;
    }
    
    &.title {
      font-size: 2em;
      left: 100%;
      top: 40%;
    }
    
    -webkit-transition: all .5s;
  }
  
  .preview-modal {
    background: rgba(0, 0, 0, 0.8);
    bottom: 0;
    opacity: 0;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    -webkit-transition: all .2s;
  }
}

