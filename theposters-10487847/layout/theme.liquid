<!doctype html>
<!--[if lt IE 7]><html class="no-js ie6 oldie" lang="en"><![endif]-->
<!--[if IE 7]><html class="no-js ie7 oldie" lang="en"><![endif]-->
<!--[if IE 8]><html class="no-js ie8 oldie" lang="en"><![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>

  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  <meta charset="utf-8" />
  <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->

  <title>
  {{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}

  <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0" /> -->
  
  <link rel="canonical" href="{{ canonical_url }}" /> 

  {% include 'fb-open-graph-tags' %}
  {% include 'twitter-cards' %}

  <link href='//fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
  <style type="text/css">
  @font-face {
    font-family: 'FranklinGothicMdCd';
    src: url({{ 'FranklinGothic-MedCd-webfont.eot' | asset_url }});
    src: url({{ 'FranklinGothic-MedCd-webfont.eot?#iefix' | asset_url }}) format('embedded-opentype'),
         url({{ 'FranklinGothic-MedCd-webfont.woff2' | asset_url }}) format('woff2'),
         url({{ 'FranklinGothic-MedCd-webfont.woff' | asset_url }}) format('woff'),
         url({{ 'FranklinGothic-MedCd-webfont.ttf' | asset_url }}) format('truetype'),
         url({{ 'FranklinGothic-MedCd-webfont.svg#franklin_gothic_fs_capsMdCn' | asset_url }}) format('svg');
    font-weight: normal;
    font-style: normal;

}
  </style>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {{ 'all.css' | asset_url | stylesheet_tag }}
  <!-- {{ 'styles.css' | asset_url | stylesheet_tag }} -->
  
  {% if settings.header_font contains 'Google' %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.header_font | remove: 'Google+' }}:300,400,700">
  {% endif %}
  {% if settings.base_font contains 'Google' %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.base_font | remove: 'Google+' }}:300,400,700">
  {% endif %}
  {{ 'html5shiv.js' | asset_url | script_tag }}

  {{ content_for_header }}
  
  {{ '//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js' | script_tag }}
  <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}

  {% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}

  <script src="{{ 'moment.min.js' | asset_url }}"></script>
  {{ 'scripts.js' | asset_url | script_tag }}
  
  <script src="{{ 'hogan-3.0.1.js' | asset_url }}"></script>
  <script src="{{ 'socialgrid.js' | asset_url }}"></script>

</head>

<body style="background-image: url({{ 'bgtexture.jpg' | asset_url }})">
  <div id="main-wrapper">
    <header id="main-header">
      <div class="container">
        <div class="row">
          <div class="col-sm-9">
            <nav>
              <ul>
                <li id="logo"><a href="/" style="background-image: url({{ 'logo.png' | asset_url }})">{{ shop.name }}</a></li>
                <li><a href="/collections/all">Posters</a></li>
                <li><a href="/pages/artists">Artists</a></li>
                <li><a href="/pages/mission">Mission</a></li>
                <li><a href="/pages/shipping">Help</a></li>
              </ul>
            </nav>
          </div>
          <div class="col-sm-3">
            <div id="cart-info">
              <a href="/account/login" class="login">Sign In / Register</a>
              <a href="/cart" class="toggle-cart" style="background-image: url({{ 'icon-bag.png' | asset_url }})">{{ cart.item_count }}</a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div id="main-content">
      {{ content_for_layout }}
    </div>

    <footer id="main-footer">
      <div class="container">
        <div class="row">
          <div class="col-sm-5 col-sm-offset-1">
            <div class="mailchimp-subscribe">
              <input type="email" name="email_subscribe" placeholder="Enter your email to subscribe to our monthly newsletter" />
              <button type="submit">></button>
            </div>
          </div>
          <div class="col-sm-5">
            <div class="social-follow-us">
              <h2>Follow us</h2>
              <a href="#" class="social-icon"><img src="{{ 'facebook.jpg' | asset_url }}" alt="FaceBook" /></a>
              <a href="#" class="social-icon"><img src="{{ 'twitter.jpg' | asset_url }}" alt="Twitter" /></a>
              <a href="#" class="social-icon"><img src="{{ 'instagram.jpg' | asset_url }}" alt="Instagram" /></a>
              <a href="#" class="social-icon"><img src="{{ 'tumblr.jpg' | asset_url }}" alt="Tumblr" /></a>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <nav>
              <ul>
                <li><a href="#">&copy; 2014 The Posters</a></li>
                <li><a href="/blogs/press">Press Coverage</a></li>
                <li><a href="/pages/submissions">Poster Submissions</a></li>
                <li><a href="/pages/privacy-policy">Privacy Policy</a></li>
                <li><a href="/pages/terms-of-use">Terms of Use</a></li>
                <li><a href="/pages/contact-us">Contact Us</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </footer>
  </div>
  <div id="cart-flyout">
    <a href="#" class="cart-top-btn toggle-cart" id="keep-shopping">Keep Shopping</a>
    <a href="/checkout" class="cart-top-btn" id="checkout">Checkout</a>

    <div class="subtotal">
      <h2>Subtotal <div class="subtotal-price">{{cart.total_price | money}}</div><small>(Tax + Shipping Not Included)</small></h2>

      <div class="gift-card">
      </div>

    </div>
    {% if cart.item_count == 0 %}
    <div class="number-of-items">
        {{ cart.item_count }} {{ cart.item_count | pluralize: 'Item', 'Items' }}
      </div>
    <div class="cart-items">
      <h2 class="empty-cart">Your cart is empty.</h2>
    </div>
    {% else%}
      <div class="number-of-items">
        {{ cart.item_count }} {{ cart.item_count | pluralize: 'Item', 'Items' }}
      </div>
      <div class="cart-items">
        {% for item in cart.items %}
        <div class="cart-item">
          <div class="image">
            <img src="{{ item | img_url: 'small' }}"  alt="{{ item.product.title }}" />
          </div>
          <div class="info">
            <a href="/cart/change?line={{ forloop.index }}&quantity=0" data-lid="{{ forloop.index }}" class="remove-item">X</a>
            <h3>{{ item.product.title }}</h3>
            <div class="qty">
              QTY <input type="text" size="2" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" onfocus="this.select();" class="tc item-quantity" /> <a href="#" class="update-cart" data-lid="{{ forloop.index }}">Update</a>
            </div>
            <div class="price">
              {{ item.line_price | money }}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</body>
</html>
